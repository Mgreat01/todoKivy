MDScreen:
    md_bg_color: 0.96, 0.96, 0.96, 1  # gris clair

    MDTopAppBar:
        title: "üìù Mon Gestionnaire de T√¢ches"
        elevation: 10
        pos_hint: {"top": 1}
        md_bg_color: 0.16, 0.5, 0.73, 1
        specific_text_color: 1, 1, 1, 1

    MDCard:
        orientation: "vertical"
        size_hint: 0.94, None
        height: self.minimum_height
        padding: "16dp"
        radius: [20, 20, 20, 20]
        elevation: 6
        pos_hint: {"center_x": 0.5, "top": 0.88}
        md_bg_color: 1, 1, 1, 1

        MDLabel:
            text: "Nouvelle t√¢che"
            theme_text_color: "Primary"
            font_style: "H6"
            size_hint_y: None
            height: self.texture_size[1]

        MDTextField:
            id: task_input
            hint_text: "√âcris quelque chose ici..."
            mode: "fill"
            fill_color: 0.95, 0.95, 0.95, 1
            size_hint_x: 1
            helper_text: "Exemple : Lire un chapitre"
            helper_text_mode: "on_focus"

    ScrollView:
        size_hint: (1, 0.75)
        pos_hint: {"top": 0.74}

        MDList:
            id: task_list
            padding: "8dp"
            spacing: "4dp"

    MDFloatingActionButton:
        icon: "plus"
        md_bg_color: 0.16, 0.5, 0.73, 1
        icon_color: 1, 1, 1, 1
        elevation_normal: 12
        pos_hint: {"right": 0.95, "y": 0.05}
        on_release: app.add_task()
